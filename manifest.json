{
    "name": "PSStore Metascore",
    "version": "1.0.4",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "https://store.playstation.com/*",
        "http://www.metacritic.com/*",
        "https://psdeals.net/*",
		"tabs",
		"storage"
    ],
    "browser_action": {
        "default_title": "PSStore Metascore",
        "default_icon": "icon/green.png"
    },
    "icons": { "16": "icon/green16.png",
        "48": "icon/green48.png",
       "128": "icon/green128.png" 
    },
	"content_scripts": [
	   {
        "matches":["https://store.playstation.com/*"],
        "js":["get_metacritic.js","content.js","psn_info.js","get_discount.js"],
        "css": ["content.css"]
	   }
	],
    "manifest_version": 2
}
